<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSM322App.MainPage"
             Title="Ana Sayfa">
    <ScrollView BackgroundColor="{AppThemeBinding Light=White, Dark=#1a1a1a}">
        <StackLayout Padding="20">
            <!-- Profil Bölümü -->
            <Frame BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#2a2a2a}" 
                   CornerRadius="15" Padding="20" Margin="0,0,0,20">
                <StackLayout>
                    <Ellipse Fill="Gray" WidthRequest="100" HeightRequest="100" 
                            HorizontalOptions="Center" Margin="0,0,0,15"/>
                    <Label x:Name="UserNameLabel" Text="Kullanıcı" FontSize="24" FontAttributes="Bold" 
                          HorizontalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    <Label x:Name="StudentNumberLabel" Text="Öğrenci No: -" FontSize="16" 
                          HorizontalOptions="Center" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>
                    <Label Text="Ödev-3" FontSize="14" 
                          HorizontalOptions="Center" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>

                <!-- Çıkış Butonu -->
                <Frame Grid.Row="2" Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#ffebee, Dark=#f44336}" 
                       CornerRadius="15" Padding="0" HasShadow="True">
                    <Button Text="🚪 Çıkış" BackgroundColor="Transparent" TextColor="{AppThemeBinding Light=#f44336, Dark=White}" 
                            FontSize="16" FontAttributes="Bold" Clicked="OnCikisClicked"/>
                </Frame>

            
        </StackLayout>
    </ScrollView>
</ContentPage>